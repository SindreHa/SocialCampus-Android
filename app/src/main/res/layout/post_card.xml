<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/colorCardBackground"
    app:cardCornerRadius="@dimen/card_radius"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/card_post_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/card_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:text="Tittel"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/textWhitePrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_post_username_group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_post_title_info"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/card_post_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brukernavn"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="14dp"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_post_title" />

            <TextView
                android:id="@+id/card_post_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="i"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />

            <TextView
                android:id="@+id/card_post_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="4dp"
                android:text="Gruppenavn"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_post_description"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:paddingTop="6dp"
            android:text="@string/placeholder_text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/textWhitePrimary"
            android:textSize="14sp"
            android:layout_below="@id/card_post_username_group_info"/>


        <LinearLayout
            android:id="@+id/card_post_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_post_description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/card_post_comment_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Kommentarer"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="12dp"
                android:textColor="@color/textWhiteSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_post_title" />

            <TextView
                android:id="@+id/card_post_stats_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="•"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />

            <TextView
                android:id="@+id/card_post_likes_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="16 liker"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />

            <TextView
                android:id="@+id/card_post_stats_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="•"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />

            <TextView
                android:id="@+id/card_post_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="16:23:12"
                android:textSize="12dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/textWhiteSecondary" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>