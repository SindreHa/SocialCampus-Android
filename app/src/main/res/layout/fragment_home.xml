<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    >

    <HorizontalScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollHome"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_us_picture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:foreground="@drawable/corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kristian" />

                    <TextView
                        android:id="@+id/about_us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tennis"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/about_us_card"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="@drawable/corners"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sindre" />

                <TextView
                    android:id="@+id/about_us_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gaming"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_us_picture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:foreground="@drawable/corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jan" />

                    <TextView
                        android:id="@+id/about_us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TurgÃ¥ing"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/fragment_post" />


        </LinearLayout>



    </HorizontalScrollView>


</LinearLayout>