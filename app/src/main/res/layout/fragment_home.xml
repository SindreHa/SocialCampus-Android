<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/scrollHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_us_picture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:foreground="@drawable/corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kristian" />

                    <TextView
                        android:id="@+id/about_us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tennis"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_us_card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:foreground="@drawable/corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sindre" />

                    <TextView
                        android:id="@+id/about_us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaming"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/group1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_margin="@dimen/card_margin"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/card_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_us_picture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:foreground="@drawable/corners"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jan" />

                    <TextView
                        android:id="@+id/about_us_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turgåing"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/post_scrollView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbars="vertical">
    <!-- Høyda hardkoda ellers utvider scrollen seg evig (?) -->

        <fragment
            android:id="@+id/fragment_container"
            android:name="com.example.socialcampus.ui.home.PostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/post_fragment" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>